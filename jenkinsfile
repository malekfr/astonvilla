pipeline {
    agent any 
   
    stages {
        stage ("Clean up"){
            steps {
                deleteDir()
                
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/malekfr/astonvilla.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker build -t malekfr11/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla"){
                    sh "docker push malekfr11/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
    }
}
