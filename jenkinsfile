pipeline {
    agent any 
    tools { 
        maven 'maven'
        nodejs '14.17.6'
    }
    stages {
        stage ("Clean up"){
            steps {
                sh "sudo rm -rf /root/.jenkins/workspace/astonvilla/*"
                
            }
        }
        stage ("Clone repo"){
            steps {
                sh "git clone https://github.com/malekfr/astonvilla.git"
            }
        }
        stage ("Generate docker image") {
            steps {
                 dir("astonvilla-app"){
                    sh "docker build -t kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER} ."
                }                
            }
        }
        stage ("push docker image") {
            steps {
                 dir("astonvilla-app"){
                    sh "docker push kakachisensei/astonvilla-app:1.1.${env.BUILD_NUMBER}"
                }                
            }
        }
    }
}
